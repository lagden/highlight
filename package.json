{
  "name": "lagden-highlight",
  "version": "4.2.0",
  "description": "Make the words shine",
  "keywords": [
    "highlight",
    "mark",
    "word",
    "text",
    "shine"
  ],
  "bug": {
    "url": "https://github.com/lagden/highlight",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/index.js",
  "repository": "lagden/highlight",
  "scripts": {
    "rm": "rm -rf dist",
    "rollup": "npm run rm && rollup -c",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "ava",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "prebuild": "npm test",
    "build": "npm run rollup && npm run gzip"
  },
  "devDependencies": {
    "ava": "1.1.0",
    "esm": "3.0.84",
    "rollup": "1.1.0",
    "rollup-plugin-babel": "4.3.1",
    "xo": "0.24.0"
  },
  "engines": {
    "node": ">=8.5.0"
  },
  "files": [
    "index.mjs",
    "license",
    "README.md",
    "dist"
  ],
  "xo": {
    "envs": [
      "es6"
    ],
    "esnext": true,
    "semicolon": false,
    "rules": {
      "capitalized-comments": 0
    }
  },
  "ava": {
    "require": [
      "esm"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          [
            "module:ava/stage-4",
            {
              "modules": false
            }
          ]
        ]
      },
      "extensions": [
        "js",
        "mjs"
      ]
    }
  }
}
