{
  "name": "lagden-highlight",
  "version": "4.1.1",
  "description": "Make the words shine",
  "keywords": [
    "highlight",
    "mark",
    "word",
    "text",
    "shine"
  ],
  "bug": {
    "url": "https://github.com/lagden/highlight",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/index.js",
  "repository": "lagden/highlight",
  "scripts": {
    "rm": "rm -rf dist",
    "rollup": "npm run rm && BABEL_ENV=rollup rollup -c",
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "gzip": "find ./dist -name '*.js' -type f -exec sh -c 'gzip -c --best {} > {}.gz' \\;",
    "prebuild": "npm test",
    "build": "npm run rollup && npm run gzip"
  },
  "devDependencies": {
    "ava": "0.25.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2015-rollup": "3.0.0",
    "coveralls": "2.13.2",
    "lagden-hex": "3.0.2",
    "nyc": "11.4.1",
    "rollup": "0.56.1",
    "rollup-plugin-buble": "0.19.0",
    "rollup-plugin-node-resolve": "3.0.3",
    "xo": "0.20.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "index.js",
    "license",
    "README.md",
    "dist"
  ],
  "xo": {
    "envs": [
      "es6"
    ],
    "esnext": true,
    "semicolon": false,
    "rules": {
      "capitalized-comments": 0
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  }
}
